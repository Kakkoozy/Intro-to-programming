// seven stars loop//


#include <iostream>
#include <string>
using namespace std;
int main()
{
	for (int x = 0; x < 7; x++)
	{ 
		for (int y = 0; y < 7; y++)
		{
			cout << "*"; 
		}
		cout << endl; 
	}


}

