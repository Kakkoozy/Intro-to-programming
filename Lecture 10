//countdown//

#include <string>
#include <iostream>
using namespace std;

int main()
{
	for (int x = 10; x >= 0; x--)
	{
		if (x != 0) {
			cout << "Lift off in: " << x << endl;
		}
		else {
			cout << "We have lift off!" << endl;
		}
	}
}



// Some counting //

#include <iostream>
#include <string>
using namespace std;
int main()
{
	cout << "This is a program that counts from 0 to 50 in increments of 1" << endl;
	for (int x = 0; x < 51; x++) {
		cout << x << endl;
	}
	cout << "This is a program that counts from 50 to 0 in decrements of 1" << endl;
	for (int x = 50; x >= 0; x--) {
		cout << x << endl;
	}
	cout << "This is a program that counts from 30 to 50 in increments of 1" << endl;
	for (int x = 30; x < 51; x++) {
		cout << x << endl;
	}
	cout << "This is a program that counts from 0 to 50 in increments of 1" << endl;
	for (int x = 0; x < 51; x++) {
		cout << x << endl;
	}
	cout << "This is a program that counts from 50 to 10 in decrements of 2" << endl;
	for (int x = 50; x > 11; x = x - 2) {
		cout << x << endl;
	}
	cout << "This is a program that counts from 100 to 200 in increments of 5" << endl;
	for (int x = 100; x < 201; x = x + 5) {
		cout << x << endl;
	}
}



//Odd or even for loop//



#include <iostream>
#include <string>
using namespace std;
int main()
{
	for (int x = 20; x <= 24; x++)
	{
		if (x % 2 == 0)
			cout << x << " is an even number" << endl;
		else
			cout << x << " is an odd number" << endl;
	}

}

// iterate loop//

#include <iostream>
#include <string>
using namespace std;
int main()
{
	for (int x = 0; x < 4; x++)
	{
	string Word = "ARSH";
	cout << Word.at(x) << endl;
	}

}


